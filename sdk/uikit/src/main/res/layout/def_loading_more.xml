<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loading_view"
              android:layout_width="match_parent"
              android:layout_height="@dimen/def_loading_more_height"
              android:gravity="center"
              android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/loading_progress"
        android:layout_width="@dimen/def_loading_more_pb_width"
        android:layout_height="@dimen/def_loading_more_pb_height"
        android:layout_marginRight="@dimen/def_loading_more_pb_marginright"
        android:indeterminateDrawable="@drawable/def_loading_more_progress" />

    <TextView
        android:id="@+id/loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/def_loading_more_tv_marginleft"
        android:textColor="@android:color/black"
        android:text="@string/def_loading_more_text"
        android:textSize="@dimen/def_loading_more_tv_textsize" />
</LinearLayout>