<resources>

    <style name="AppTheme" parent="AppTheme.Base"/>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Statusbar background -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Actionbar background -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme.OverflowMenu" parent="ToolbarTheme.OverflowMenu.Base">
        <item name="android:dropDownVerticalOffset">-4dp</item>
    </style>

    <style name="ToolbarTheme.OverflowMenu.Base" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="ToolbarTheme" parent="ToolbarTheme.Base"/>

    <style name="ToolbarTheme.Base" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="android:textAllCaps">false</item>-->
        <!-- Actionbar HomeAsUp and overflow button color -->
        <!--<item name="colorControlNormal">@color/colorAccent</item>-->
        <!-- Actionbar subtitle color-->
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/ToolbarTheme.OverflowMenu</item>
        <item name="actionOverflowButtonStyle">@style/ToolbarTheme.OverflowButton</item>
    </style>

    <style name="ToolbarTheme.OverflowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <!--<item name="android:src">@drawable/ic_add_white_24dp</item>-->
    </style>

    <style name="ToolbarTheme.Popup" parent="ToolbarTheme.Popup.Base">
    </style>

    <style name="ToolbarTheme.Popup.Base" parent="ThemeOverlay.AppCompat.Light">
        <!--<item name="android:colorBackground">@color/overflowMenuBackground</item>-->
        <!--<item name="android:textColor">@color/overflowMenuTextColor</item>-->
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--<style name="ToolbarTheme.Base">-->
    <!--<item name="android:layout_width">match_parent</item>-->
    <!--<item name="android:layout_height">?attr/actionBarSize</item>-->
    <!--<item name="android:minHeight">?attr/actionBarSize</item>-->
    <!--<item name="android:background">@color/colorPrimary</item>-->
    <!--<item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
    <!--<item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>-->
    <!--</style>-->

    <style name="OverflowButtonStyle" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_add_white_24dp</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>

    <style name="PopWindowStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/grey</item>
    </style>

    <style name="SwipeRecyclerviewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="SwipteRecyclerItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="SplashActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_layers</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
